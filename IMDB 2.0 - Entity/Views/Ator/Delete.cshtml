@model IMDB_2._0___Entity.Models.Ator

<div class="jumbotron mt-5 text-center">
    <h1>Deletar ator</h1>
    <p class="lead">Você tem certeza que deseja deletar esse ator?</p>
</div>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-2">
            <label for="nome" class="form-label">Nome</label>
            <div class="col-12">
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-2">
            <label for="sobrenome" class="form-label">Sobrenome</label>
            <div class="col-12">
                @Html.EditorFor(model => model.sobrenome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.sobrenome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-end gap-4">
            @Html.ActionLink("Voltar para lista de atores", "Index", null, new { @class = "btn btn-dark" })
            <input type="submit" value="Deletar" class="btn btn-danger" />
        </div>

        if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @ViewBag.ErrorMessage
            </div>
        }   
    }
</div>

