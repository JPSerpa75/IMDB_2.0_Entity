@model IEnumerable<IMDB_2._0___Entity.Models.Ator>


<div class="jumbotron mt-5 text-center">
    <h1>Lista de atores</h1>
    <p class="lead">Aqui você pode gerenciar seus atores</p>
</div>

<p class="text-center mb-4">
    @Html.ActionLink("Cadastrar novo autor", "Create", null, new { @class = "btn btn-dark" })
</p>

<table class="table table-striped table-hover text-center">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Sobrenome
        </th>
        <th>
            Ações
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sobrenome)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Ator", new { id = item.atorId })" class="mx-2"><i class='bi bi-pencil'></i></a>
                <a href="@Url.Action("Delete", "Ator", new { id = item.atorId })" class="mx-2"><i class='bi bi-trash'></i></a>
            </td>
        </tr>
    }

</table>
