@model IMDB_2._0___Entity.Models.Atuacao

<div class="jumbotron mt-5 text-center">
    <h1>Cadastrar novas atuação</h1>
    <p class="lead">Aqui você pode inserir novas atuações</p>
</div>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group row mb-2">
                <div class="col-6">
                    @Html.LabelFor(model => model.ator.atorId, "Ator", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-12">
                        @Html.DropDownList("AtorId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.atorId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-6">
                    @Html.LabelFor(model => model.filme.filmeId, "Filme", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-12">
                        @Html.DropDownList("FilmeId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.filmeId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-4">
                @Html.ActionLink("Voltar para lista de atuações", "Index", null, new { @class = "btn btn-dark" })
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>


        </div>
    }
</div>
