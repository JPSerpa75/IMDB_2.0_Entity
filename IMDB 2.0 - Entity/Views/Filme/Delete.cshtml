@model IMDB_2._0___Entity.Models.Filme

<div class="jumbotron mt-5 text-center">
    <h1>Deletar filme</h1>
    <p class="lead">Você tem certeza que deseja deletar esse filme?</p>
</div>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-2">
            <label for="titulo" class="form-label">Título</label>
            <div class="col-12">
                @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-2">
            <label for="descricao" class="form-label">Descrição</label>
            <div class="col-12">
                @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row mb-2">
            <div class="col-6">
                <label for="categoria" class="form-label">Categoria</label>
                <div class="col-12">
                    @Html.EditorFor(model => model.categoria, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.categoria, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-6">
                <label for="idioma" class="form-label">Idioma</label>
                <div class="col-12">
                    @Html.EditorFor(model => model.idioma, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.idioma, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group row mb-2">
            <div class="col-6">
                <label for="classificacaoIndicativa" class="form-label">Classificação indicativa</label>
                <div class="col-12">
                    @Html.EditorFor(model => model.classificacaoIndicativa, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.classificacaoIndicativa, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-6">
                <label for="anoLancamento" class="form-label">Ano de lançamento</label>
                <div class="col-12">
                    @Html.EditorFor(model => model.anoLancamento, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.anoLancamento, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-4">
            @Html.ActionLink("Voltar para lista de filmes", "Index", null, new { @class = "btn btn-dark" })
            <input type="submit" value="Deletar" class="btn btn-danger" />
        </div>

        if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @ViewBag.ErrorMessage
            </div>
        }

    }
</div>
